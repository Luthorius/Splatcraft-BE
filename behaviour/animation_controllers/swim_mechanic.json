{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ink_buff" : {
      "states" : {
        "default" : {
          "on_entry" : [
            "/effect @s clear",
	    "/scoreboard players set @p charge_speed 1",
            "/scoreboard players set @p submerged 0"
          ],
          "transitions" : [
            {
              "buff" : "(query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:paint')) && (query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:blue'))"
            },
            {
              "buff2" : "(query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:paint')) && (query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:orange'))"
            }
          ]
        },
        "buff" : {
          "on_entry" : [
            "/scoreboard players set @p submerged 1"
          ],
          "transitions" : [
            {
              "default" : "!query.is_sneaking || !q.relative_block_has_any_tag(0,-2.5,0,'splat:paint')"
            },
            {
              "buff2" : "(query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:paint')) && (query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:orange'))"
            }
          ]
        },
        "buff2" : {
          "on_entry" : [
            "/scoreboard players set @p submerged 2"
          ],
          "transitions" : [
            {
              "default" : "!query.is_sneaking || !q.relative_block_has_any_tag(0,-2.5,0,'splat:paint')"
            },
            {
              "buff" : "(query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:paint')) && (query.is_sneaking && q.relative_block_has_any_tag(0,-2.5,0,'splat:blue'))"
            }
          ]
        }
      }
    }
  }
}