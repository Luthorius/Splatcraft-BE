{
	"format_version": "1.12.0",
	"minecraft:entity": {
		"description": {
			"identifier": "splat:inkdrip2",
			"runtime_identifier": "minecraft:arrow",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
		"components": {
			"minecraft:collision_box": {
				"width": 0.25,
				"height": 0.25
			},
			"minecraft:timer": {
				"time": 1,
				"time_down_event": {
					"event": "splat:drip"
				}
			},
			"minecraft:projectile": {
				"on_hit": {
					"definition_event": {
						"affect_projectile": true,
						"event_trigger": {
							"event": "splat:hit",
							"target": "self"
						}
					},
					"remove_on_hit": {}
				},
				"power": 0.9,
				"gravity": 0.9,
				"angle_offset": -20.0,
				"hit_sound": "block.beehive.drip"
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {
				"default_values": {
					"max_optimized_distance": 80.0,
					"max_dropped_ticks": 10,
					"use_motion_prediction_hints": true
				}
			}
		},
		"events": {
			"splat:hit": {
				"sequence": [
					{
						"run_command": {
							"command": [
								"execute @s ~ ~ ~ detect ~ ~-1 ~ air -1 tag @s add die"
							]
						}
					},
		                        {
						"run_command": {
							"command": [
								"execute @s ~ ~ ~ detect ~ ~-1 ~ splat:paint2 -1 tag @s add die"
							]
						}
					},
					{
						"run_command": {
							"command": [
								"execute @s ~ ~ ~ detect ~ ~-1 ~ splat:spawnpoint -1 tag @s add die"
							]
						}
					},
					{
						"run_command": {
							"command": [
								"execute @s ~ ~ ~ detect ~ ~-1 ~ splat:spawnpoint2 -1 tag @s add die"
							]
						}
					},
					{
						"run_command": {
							"command": [
								"kill @s[tag=die]"
							]
						}
					},
					{
						"run_command": {
							"command": [
								"fill ~ ~-1 ~ ~ ~-1 ~ splat:paint2 0"
							]
						}
					},
					{
						"run_command": {
							"command": [
								"kill @s"
							]
						}
					}
				]
			}
		}
	}
}